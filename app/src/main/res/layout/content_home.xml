<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/home_activity_vertical_margin"
    android:paddingLeft="@dimen/home_activity_horizontal_margin"
    android:paddingRight="@dimen/home_activity_horizontal_margin"
    android:paddingTop="@dimen/home_activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yckir.cyclebattledemo.HomeActivity"
    tools:showIn="@layout/activity_home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/app_name_caps"
        android:textSize="@dimen/home_activity_title_text_size"
        android:textStyle="bold|italic"
        android:gravity="center_horizontal"/>

    <com.yckir.cyclebattledemo.SquareView
        android:id="@+id/logo"
        android:background="@drawable/home_background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="@dimen/button_margin"/>

    <LinearLayout
        android:id="@+id/home_buttons"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/play_game_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="@dimen/button_margin"
            android:gravity="center"
            android:textSize="@dimen/button_text_size"
            android:onClick="play_button_clicked"
            android:text="Play Game"/>

        <Button
            android:id="@+id/how_to_play_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            android:textSize="@dimen/button_text_size"
            android:onClick="how_to_play_button_clicked"
            android:text="How to Play"/>

        <Button
            android:id="@+id/rules_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="@dimen/button_padding"
            android:layout_marginBottom="@dimen/button_margin"
            android:textSize="@dimen/button_text_size"
            android:onClick="rules_button_clicked"
            android:text="Rules"/>
    </LinearLayout>

</LinearLayout>
